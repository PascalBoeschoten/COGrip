<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="41dp"
        android:src="@drawable/bluetoothstrip" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:paddingTop="20dp">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:padding="0dp"
            android:src="@drawable/settingsbluetooth" />

        <ToggleButton
            android:id="@+id/bluetoothToggleButton"
            style="@drawable/settingtogglebuttons"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/settingstoggle_btn_toggle_holo_dark" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.03"
        android:src="@drawable/sharingiscaring" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.08" >

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="191dp"
            android:layout_height="wrap_content"
            android:src="@drawable/settingsfacebook" />

        <ToggleButton
            android:id="@+id/ToggleButton02"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/settingstoggle_btn_toggle_holo_dark" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.13" >

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:src="@drawable/settingstwitter" />

        <ToggleButton
            android:id="@+id/toggleButton1"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/settingstoggle_btn_toggle_holo_dark" />

    </LinearLayout>

    <Gallery
        android:id="@+id/gallery1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.19" />

</LinearLayout>